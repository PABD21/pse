<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/Homepage/images/favicon.png" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css"
    />
    <link rel="stylesheet" href="/Homepage/css/admin.css" />
    <title>Administrare</title>
  </head>
  <body>
    <main class="container">
      {% include 'homepage/header.html.twig' %} {% if app.request.get('loginSuccess') %}
      <div class="alert alert-success text-center mt-3">Autentificare reușită !</div>
      {% endif %}
      <div class="row mx-1 d-flex justify-content-between">
        <p>
          <a class="btn btn-danger mt-3" href="#edit-student" rel="modal:open" id="add-student">
            Adaugă student
          </a>
        </p>
      </div>
      <section class="row">
        {% for student in students %}
        <div class="col-lg-2 col-3 p-2 text-center">
          <div class="col">
            <a href="{{ student.link }}" class="student-link">
              <img
                src="{{ student.picture }}"
                class="image student-image"
                alt="{{ student.name }}"
              />
            </a>
            <h6 class="student-name mt-3 text-secondary">{{ student.name }}</h6>
            <div class="student-id" hidden>{{ student.id }}</div>
          </div>
          <p>
            <a class="btn btn-primary edit-student" href="#edit-student" rel="modal:open">
              Editare
            </a>
          </p>
        </div>
        {% endfor %}
      </section>
      <div id="edit-student" class="modal">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
        <div class="row justify-content-between m-0" id="extra-buttons">
          <hr class="col-11" />
          <a class="col-4 btn btn-danger" href="" id="delete-student">Șterge student</a>
          <a class="col-4 btn btn-info" href="" id="remove-picture">Șterge poza</a>
        </div>
      </div>
    </main>
    {% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <script src="/Homepage/js/admin.js"></script>
    {% endblock %}
  </body>
</html>
